@page "/auth/ForgotPassword"

@using System.ComponentModel.DataAnnotations
@using System.Text
@using System.Text.Encodings.Web
@using DemoProject.Client.Service
@using DemoProject.DataModels.Dto.Request


@layout AuthLayout

<PageTitle>Forgot your password?</PageTitle>

<div class="d-flex justify-content-center align-items-start" style="margin-top: 5vh;">
    <div class="col-md-4">
        <section class="text-center p-4 rounded shadow bg-white">
            <h1>Forgot your password?</h1>
            <h2>Enter your email.</h2>
            <hr />
            <EditForm Model="Input" FormName="forgot-password" OnValidSubmit="OnValidSubmitAsync" method="post">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" role="alert" />

                <div class="form-floating mb-3">
                    <InputText @bind-Value="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label for="email" class="form-label">Email</label>
                    <ValidationMessage For="() => Input.Email" class="text-danger" />
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset password</button>
            </EditForm>

        </section>
    </div>
</div>

@code {

    [Inject]
    private AuthService AuthServices { get; set; } = default!;

    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    [SupplyParameterFromForm]
    private ForgotPasswordCommandDto Input { get; set; } = new();

    private async Task OnValidSubmitAsync()
    {
        var result = await AuthServices.ForgeotPasswordAsync(Input);
        if (result.Success)
        {
            //  Navigate to a confirmation page or show a success message
            // For example:
            NavigationManager.NavigateTo("/auth/ForgotPasswordConfirmation");
        }
        else
        {
            // Handle errors (e.g., show error messages)
        }
    }
}