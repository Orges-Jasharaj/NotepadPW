@if (IsOpen)
{
    <div class="popup-backdrop" @onclick="Close">
        <div class="popup" @onclick:stopPropagation>
            @if (IsLoading && Text == null)
            {
                <!-- Display Spinner here while loading -->
                <div class="spinner-container">
                    <div class="spinner"></div>
                    <div>Generating Summary...</div>
                </div>
            }
            else
            {
                <!-- Display the text once loaded -->
                <textarea readonly class="popup-textarea">@Text</textarea>
            }
        </div>
    </div>
}
@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string? Text { get; set; }
    [Parameter] public bool IsLoading { get; set; } // New parameter
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task Close()
    {
        if (OnClose.HasDelegate)
        {
            await OnClose.InvokeAsync();
        }
        // The parent component is responsible for setting IsOpen=false
        // via the OnClose callback in the final implementation above.
    }
}